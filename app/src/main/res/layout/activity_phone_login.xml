<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3A3E41"
    tools:context=".PhoneLoginActivity">

    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_login"/>

    <ImageView
        android:id="@+id/cloud1"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/bg"
        android:src="@drawable/cloud1"/>

    <ImageView
        android:id="@+id/star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="35dp"
        android:scaleType="fitXY"
        android:src="@drawable/stars"/>

    <EditText
        android:id="@+id/phone_number_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMountain"
        android:hint="Enter phone number"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:paddingLeft="25dp"
        android:paddingTop="15dp"
        android:textSize="14dp"
        android:paddingBottom="15dp"
        android:layout_marginTop="200dp"
        android:inputType="phone"
        android:background="@drawable/et_ui"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:drawableStart="@drawable/ic_smartphone_black_24dp"
        android:drawableLeft="@drawable/ic_smartphone_black_24dp"
        android:drawableTint="@color/colorAccent"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/verification_code_input"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_number_input"
        android:hint="Enter verification code"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:paddingLeft="25dp"
        android:paddingTop="15dp"
        android:textSize="14dp"
        android:paddingBottom="15dp"
        android:layout_marginTop="20dp"
        android:inputType="text|number"
        android:background="@drawable/et_ui"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:drawableStart="@drawable/ic_verified_user_black_24dp"
        android:drawableLeft="@drawable/ic_verified_user_black_24dp"
        android:drawableTint="@color/colorAccent"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/send_ver_code_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/verification_code_input"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:background="@drawable/bt_ui"
        android:text="Send Verification Code"/>
    <Button
        android:id="@+id/ver_code_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/send_ver_code_button"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:visibility="invisible"
        android:background="@drawable/bt_ui"
        android:text="Verify"/>

</RelativeLayout>