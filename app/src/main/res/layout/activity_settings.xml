<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">
    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_login"/>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/set_profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/profile_image"
        app:civ_border_width="5dp"
        app:civ_border_color="@color/colorAccent" />
    <EditText
        android:id="@+id/set_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_profile_image"
        android:inputType="textMultiLine"
        android:hint="username"
        android:textAlignment="center"
        android:drawableEnd="@drawable/ic_edit_black_24dp"
        android:drawableRight="@drawable/ic_edit_black_24dp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:background="@drawable/et_ui"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:padding="6dp"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/label_1"
        android:layout_below="@+id/set_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:textStyle="italic"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="This is not your username or pin.this name will be visible to The Vibe community."/>

    <RelativeLayout
        android:id="@+id/about_segment"
    android:layout_below="@+id/label_1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/et_ui">
    <TextView
        android:id="@+id/label_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="8dp"
        android:text="About and Phone Number"
        />
    <View
        android:id="@+id/divider"
        android:layout_marginTop="9dp"
        android:layout_below="@id/label_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />
    <EditText
        android:id="@+id/set_profile_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_2"
        android:inputType="textMultiLine"
        android:hint="Hi i am new to The Vibe,i am happy to be here."
        android:textAlignment="center"
        android:drawableEnd="@drawable/ic_edit_black_24dp"
        android:drawableRight="@drawable/ic_edit_black_24dp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:padding="6dp"
        android:layout_marginTop="10dp"/>
</RelativeLayout>

    <Button
        android:id="@+id/update_settings_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_segment"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:background="@drawable/bt_ui"
        android:textColor="@color/colorPrimaryDark"
        android:text="update Status"/>

</RelativeLayout>